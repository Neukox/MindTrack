# Exemplo de .env para desenvolvimento
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=mindtrack
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=mindtrack_db

# Substitua as placeholders abaixo. Exemplo:
# DATABASE_URL="postgresql://mindtrack:your_password_here@localhost:5432/mindtrack_db?schema=public"
DATABASE_URL="postgresql://postgres:postgres@localhost:9000/mindtrack_db?schema=public"

# Configurações da recuperação de senha
RESET_PASSWORD_TOKEN_EXPIRATION_MINUTES=15

# URL do cliente (frontend)
CLIENT_URL=http://localhost:5173

# Configurações de servidor de e-mail (Gmail para teste)
EMAIL_SERVER=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=gabrielcfonline0900@gmail.com # Seu e-mail do Gmail 
EMAIL_PASS= # Você precisa gerar uma senha de app do Gmail
EMAIL_FROM=gabrielcfonline0900@gmail.com # E-mail do remetente

# NOTA: Se EMAIL_USER e EMAIL_PASS estiverem vazios, 
# o sistema retornará o token diretamente para testes

# Configurações JWT
JWT_ACCESS_SECRET=your_jwt_secret_key
JWT_ACCESS_EXPIRATION=900000 # 15 minutos em segundos
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key
JWT_REFRESH_EXPIRATION=592200 # 7 dia em segundos
