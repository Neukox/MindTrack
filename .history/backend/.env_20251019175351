# Configurações do Banco de Dados PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=9000
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=mindtrack

# URL de conexão do banco (mantenha a que está funcionando)
DATABASE_URL="postgresql://postgres:postgres@localhost:9000/mindtrack?schema=public"

# Configurações da aplicação
CLIENT_URL=http://localhost:3000
NODE_ENV=development

# Configurações da recuperação de senha
RESET_PASSWORD_TOKEN_EXPIRATION_MINUTES=15

# Configurações de servidor de e-mail (Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@mindtrack.com

# Para usar email real, configure:
# EMAIL_USER=seu_email@gmail.com
# EMAIL_PASS=sua_app_password_do_gmail  
# EMAIL_FROM=seu_email@gmail.com
